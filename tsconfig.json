{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "resolveJsonModule": true,
    },
    "files": [
        "./index.ts",
        "./commands.ts",
    ],
    "resolveJsonModule" : true,
    "exclude": ["node_modules"],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.showUnused": true,
    "editor.autoImportSuggestions.enabled": true
}
